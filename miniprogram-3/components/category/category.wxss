/* components/category/category.wxss */
.flex{
    display: flex;
    flex-wrap: wrap;
}

.father{
    position: relative;
    width: 33.33vw;
    height: 33.33vw;
    border: 2px solid white;
    box-sizing: border-box;
}

.son{
    /* 子绝父相要告知位置 */
    position: absolute;
    left: 0;
    bottom: 0;
    background-color: rgb(0, 0, 0, 0.4);
    width: 100%;
    padding: 5px;
    box-sizing: border-box;
    color: white;
    margin: 0;
}
.img{
    width: 100%;
    height: 100%;
}