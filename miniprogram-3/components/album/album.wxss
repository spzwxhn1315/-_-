/* components/album/album.wxss */
.album {
    height: calc(100vh - 60px);
    display: flex;
    flex-wrap: wrap;
  }
  .album_item {
    width: 50%;
    /* border: 3px solid #fff; */
    position: relative;
  }
  .txtbox {
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,.4);
    width: 100%;
    color: #fff;
    padding: 10rpx;
  }
  /* 大图样式 */
  .banner {
    width: 100%;
    height: 480rpx;
  }
  .my_img {
    width: 100%;
    height: 480rpx;
  }
  /* 小图样式 */
  .imgs_box {
    display: flex;
  }
  .img {
    width: 33.33%;
    height: 125rpx;
    border: 2px solid #fff;
  }